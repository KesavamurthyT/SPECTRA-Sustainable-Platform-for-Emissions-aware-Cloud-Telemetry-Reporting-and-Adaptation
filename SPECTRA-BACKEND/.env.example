# ============================================================
# SPECTRA Backend â€” Environment Variables
# ============================================================
# Copy this file to .env and fill in your values.
# Lines beginning with # are comments and are ignored.
#
# REQUIRED to run in demo mode (no real APIs):
#   DATABASE_URL, SIM_START
#
# REQUIRED for full functionality:
#   CLOUDFLARE_API_TOKEN  (latency data)
#   ELECTRICITY_MAPS_API_KEY  (live carbon intensity)
#   AWS_*                 (real EC2/CloudWatch data)
# ============================================================

# ---- Database -----------------------------------------------
# SQLite (default, zero-setup):
DATABASE_URL="file:./dev.db"
# PostgreSQL example (for production):
# DATABASE_URL="postgresql://user:password@localhost:5432/spectra"

# ---- Simulation Clock ---------------------------------------
# UTC datetime that the sim clock starts at on first boot.
# Format: ISO 8601  (e.g. 2024-01-01T00:00:00Z)
SIM_START="2024-01-01T00:00:00Z"

# How often (real hours) the simulation clock auto-ticks forward.
SIM_TICK_INTERVAL_HOURS=1

# How often (real hours) Cloudflare latency data is refreshed.
LATENCY_FETCH_INTERVAL_HOURS=6

# ---- CSV Data Import ----------------------------------------
# Directory containing ElectricityMaps CSV snapshot files.
# Files should be named so the region code appears in the filename
# e.g. snapshots_2024_IE.csv, snapshots_2024_US.csv
CSV_DIR="./data/electricitymaps"

# ---- Cloudflare Radar (latency) ----------------------------
# Leave empty to run in demo mode with fallback baseline latencies.
CLOUDFLARE_API_TOKEN=""
CLOUDFLARE_ACCOUNT_ID=""

# ---- AWS Integration ----------------------------------------
# Leave empty to run in demo mode with seeded instance data.
# These can also be configured via the Settings UI (stored in DB).
AWS_ROLE_ARN=""
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGIONS_TO_MONITOR="US,IE,SE"
AWS_COST_ALLOCATION_TAG="CostCenter"

# ---- ElectricityMaps (live carbon intensity) ----------------
# Leave empty to use imported CSV snapshots instead.
ELECTRICITY_MAPS_API_KEY=""

# ---- FastAPI Application ------------------------------------
APP_TITLE="SPECTRA API"
APP_VERSION="1.0.0"
APP_ENV="development"   # development | staging | production

# ---- CORS ---------------------------------------------------
# Comma-separated list of allowed frontend origins.
CORS_ORIGINS="http://localhost:5173,http://localhost:3000,http://localhost:8080"
